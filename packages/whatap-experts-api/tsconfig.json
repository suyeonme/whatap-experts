{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "es7"
        ],
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "src",
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true
    },
    "ts-node": {
        "esm": true
    },
    "exclude": [
        "/node_modules/"
    ],
    "include": [
        "src/**/*.ts"
    ]
}